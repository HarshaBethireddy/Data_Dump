{
  "app_name": "API Test Framework",
  "app_version": "2.0.0",
  "environment": "development",
  "debug": false,
  "api": {
    "url": "https://api.example.com",
    "host": "api.example.com",
    "timeout": 30,
    "verify_ssl": false,
    "max_retries": 3,
    "retry_delay": 1.0
  },
  "test_execution": {
    "parallel_count": 2,
    "think_time": 3.0,
    "batch_size": 10,
    "enable_async": true,
    "connection_pool_size": 20
  },
  "app_ids": {
    "regular_start": 1000000,
    "regular_increment": 1,
    "prequal_start": "10000000000000000000",
    "prequal_increment": 1,
    "use_timestamp_suffix": false
  },
  "paths": {
    "fullset_requests_dir": "data/templates/fullset_requests",
    "prequal_requests_dir": "data/templates/prequal_requests",
    "config_dir": "config",
    "output_dir": "output",
    "reports_dir": "output/reports",
    "responses_dir": "output/responses",
    "comparisons_dir": "output/comparisons",
    "logs_dir": "output/logs",
    "test_data_dir": "data/test_data",
    "app_ids_file": "data/test_data/app_ids.json",
    "test_scenarios_file": "data/test_data/test_scenarios.json"
  },
  "logging": {
    "level": "INFO",
    "enable_console": true,
    "enable_file": true,
    "enable_json": false,
    "log_file": null,
    "max_file_size": 10485760,
    "backup_count": 5
  },
  "reporting": {
    "enable_html": true,
    "enable_json": true,
    "enable_excel": true,
    "include_charts": true,
    "include_performance_metrics": true,
    "template_dir": "templates",
    "chart_width": 800,
    "chart_height": 600
  }
}